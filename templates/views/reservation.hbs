		<nav class="vpravoNav">
			<a href='registration.html'>REGISTRACE </a>|
			<a href='login.html'>LOGIN</a>
		</nav>
	</nav>

	<!--prostřední část-->
	<div class="clanekSiroky2">
		<div class="clanekL">
			<div id="booking" class="section">
				<div class="section-center">
					<div class="container">
						<div class="row">
							<div class="col-md-7 col-md-push-5">
							</div>
							<div class="col-md-4 col-md-pull-7">
								<div class="booking-form">
									<form>
										<div class="form-group">
											<span class="form-label">Výběr destinace</span>
											<input class="form-control" type="text"
												placeholder="Zadejte cíl nebo název hotelu">
										</div>
										<div class="row">
											<div class="col-sm-6">
												<div class="form-group">
													<span class="form-label">Datum příjezdu</span>
													<input class="form-control" id="ckeckIn" type="date" required>
												</div>
											</div>
											<div class="col-sm-6">
												<div class="form-group">
													<span class="form-label">Datum odjezdu</span>
													<input class="form-control" id="ckeckOut" type="date" required>
												</div>
											</div>
										</div>
										<div class="row">
											<div class="col-sm-4">
												<div class="form-group">
													<span class="form-label">Pokoje</span>
													<select class="form-control">
														<option>1</option>
														<option>2</option>
														<option>3</option>
													</select>
													<span class="select-arrow"></span>
												</div>
											</div>
											<div class="col-sm-4">
												<div class="form-group">
													<span class="form-label">Dospělí</span>
													<select class="form-control">
														<option>1</option>
														<option>2</option>
														<option>3</option>
													</select>
													<span class="select-arrow"></span>
												</div>
											</div>
											<div class="col-sm-4">
												<div class="form-group">
													<span class="form-label">Děti</span>
													<select class="form-control">
														<option>0</option>
														<option>1</option>
														<option>2</option>
													</select>
													<span class="select-arrow"></span>
												</div>
											</div>
										</div>
										<div class="form-btn">
											<button   type="submit" class="submit-btn" id="findres">Zkontrolovat dostupnost</button>
										</div>
									</form>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
		<div class="clanekP">
		</div>
	</div>

